<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UseCompoundDrawables">

    <TextView
            android:id="@+id/testName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginSuperBig"
            android:layout_marginTop="@dimen/marginSuperBig"
            android:textColor="@color/black"
            android:textSize="@dimen/textSizeExtraBig"
            tools:text="question Name" />

    <TextView
            android:id="@+id/questionsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginSuperBig"
            android:layout_marginTop="@dimen/marginNormal"
            android:gravity="start"
            android:textColor="@color/blueTextColor"
            android:textSize="@dimen/textSizeBig"
            tools:text="questions number: 4" />

</LinearLayout>