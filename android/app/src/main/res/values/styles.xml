<resources>

    <style name="ProgressDialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.BlueTextInputLayout">
        <item name="android:textColor">@color/blueTextColor</item>
        <item name="android:textSize">@dimen/auth_font_small</item>
    </style>

    <style name="AppTheme.DefaultEditText">
        <item name="android:textSize">@dimen/textSizeBig</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AppRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/textAccentColor</item>
        <item name="colorControlActivated">@color/textAccentColor</item>
    </style>

    <style name="DialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="windowFixedHeightMajor">35%</item>
        <item name="windowFixedHeightMinor">35%</item>
    </style>

</resources>
